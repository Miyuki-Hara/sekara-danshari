        <div class=“col-md-4”>
          <div class="card mv-3">
            <img >

        </div>
        <div class=“col-md-4”>
        </div>
        <div class=“col-md-4”>
        </div>
      </div>
    </div>
  </section>
</div>

<%# 断捨離記録一覧 %>
  <div class='item-contents', id="view">
    <h2 class='title'>みんなの断捨離</h2>
    <div class="subtitle" >
      最新の断捨離
    </div>
    <ul class='item-lists'>

    <% @items.each do |item| %>
      <li class='list'>
        <%= link_to item_path(item) do %>
        <div class='item-img-content'>
        <%= image_tag item.image.variant(resize: '500x500'), class: "item-img" if item.image.attached? %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= item.name %>
          </h3>
          <div class='item-price'>
            <span>手離し方：<%= item.let_go_way.name %></span>
          </div>
        </div>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>



<%= link_to(new_item_path, class: 'purchase-btn text-decoration-none') do %>
  <span class='purchase-btn-text '>記録する</span>
  <%= image_tag 'record_btn.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>

